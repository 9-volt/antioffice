<div class="container bs-docs-container">
  <div class="row">
    <div class="col-md-12">
      <div class="bs-docs-section">
        <p>List of online devices in office</p>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>User</th>
              <th>Device</th>
              <th>Online for</th>
            </tr>
          </thead>
          <tbody>
            {{#each online}}
            {{#each devices}}
            <tr>
              {{#unless @index}}
              <td rowspan="{{../../devices.length}}" {{#if ../../isActive}}class="warning"{{/if}}>{{#if ../../name}}{{../../../name}}{{else}}Unknown{{/if}}</td>
              {{/unless}}

              {{#eq ../../clientMac mac}}
                <td class="warning">{{title}}</td>
                <td class="warning">{{parseSeconds uptime}}</td>
              {{else}}
                <td>{{title}}</td>
                <td>{{parseSeconds uptime}}</td>
              {{/eq}}
            </tr>
            {{/each}}
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
