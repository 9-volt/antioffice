<div class="container bs-docs-container">
  <div class="row">
    <div class="col-md-12">
      <div class="bs-docs-section">
        <p>List of all users</p>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>User</th>
              <th>Device</th>
              <th>Last uptime</th>
              <th>Last time was online</th>
            </tr>
          </thead>
          <tbody>
            {{#each online}}
            {{#each devices}}
            <tr {{#eq ../../clientMac mac}}class="warning"{{/eq}}>
              {{#unless @index}}
                {{#eq ../../../clientMac ../mac}}
                  <td rowspan="{{../../../devices.length}}" class="editable"><form><input type="text" value="{{../../../name}}" data-type="users" data-id="{{../../../id}}"></form><span class="value">{{#if ../../../name}}{{../../../../name}}{{else}}Unknown{{/if}}</span></td>
                {{else}}
                  <td rowspan="{{../../../devices.length}}">{{#if ../../../name}}{{../../../../name}}{{else}}Unknown{{/if}}</td>
                {{/eq}}
              {{/unless}}
              {{#eq ../../clientMac mac}}
              <td class="editable"><form><input type="text" value="{{title}}" data-type="devices" data-id="{{../id}}"></form><span class="value">{{title}}</span></td>
              {{else}}
              <td>{{title}}</td>
              {{/eq}}
              <td>{{parseSeconds uptime}}</td>
              <td>{{to}}</td>
            </tr>
            {{/each}}
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
